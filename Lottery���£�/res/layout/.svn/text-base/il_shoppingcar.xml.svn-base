<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/iv_btn_shopcar_add_optionalnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/id_lottery_add_optional_num" />

        <Button
            android:id="@+id/iv_btn_shopcar_add_randomnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/id_lottery_add_random_num" />
    </LinearLayout>

    <ListView
        android:id="@+id/iv_lv_shopcar_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </ListView>

    <Button
        android:id="@+id/iv_btn_shopcar_clearlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/id_lotter_shopping_clear" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/iv_btn_shopcar_hemai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/id_lottery_shopping_initiate_buy" />

        <Button
            android:id="@+id/iv_btn_shopcar_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/id_lottery_shopping_buy" />
    </LinearLayout>

</LinearLayout>
