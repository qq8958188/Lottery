<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/itembgshape"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/iv_tv_shopcaritem_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/id_shopping_delete_item" />

    <TextView
        android:id="@+id/iv_tv_shopcaritem_rednums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="01 02 03 04 05 06 07 08 09 10 11 12"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/iv_tv_shopcaritem_bluenums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="01 02"
        android:textColor="#0000FF" />

</LinearLayout>
