<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 普通的title -->
    
    <RelativeLayout 
        android:id="@+id/id_title_commom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_title_bg"
        android:visibility="gone">
        
        <ImageView 
            android:id="@+id/iv_title_goback"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/id_title_goback"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:gravity="center"
            android:id="@+id/iv_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        
        <ImageView 
            android:id="@+id/iv_title_help"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/id_title_help"
            android:layout_centerVertical="true"/>
        
    </RelativeLayout>
    
    <!-- 未登录的title -->
    
    <RelativeLayout 
        android:id="@+id/iv_title_unlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_title_bg"
        android:visibility="gone">
        
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/id_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
        
        <ImageView 
            android:id="@+id/iv_btn_titleregist"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/id_purchase_regist"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"/>
        
        <ImageView 
            android:id="@+id/iv_btn_titlelogin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/id_purchase_login"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_btn_titleregist"
            android:layout_marginRight="5dp"/>
        
        
    </RelativeLayout>

    <!-- 已登录的title -->
    
    <RelativeLayout 
        android:id="@+id/iv_title_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_title_bg"
        android:visibility="gone">
        
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/id_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
        
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/iv_title_tv_zhanghao"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="账号:"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    
    
</RelativeLayout>
