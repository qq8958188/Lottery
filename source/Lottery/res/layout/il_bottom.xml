<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 普通的底部 -->
    
    <LinearLayout 
        android:id="@+id/iv_bottom_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_buttom_bg"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">
        
        <ImageButton
            android:id="@+id/iv_ib_bottom_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:src="@drawable/id_lottery_home"/>
        
        <ImageButton
            android:id="@+id/iv_ib_bottom_hall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:src="@drawable/id_lottery_hall"/>
        
        <ImageButton
            android:id="@+id/iv_ib_bottom_userdata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:src="@drawable/id_lottery_recharge"/>
        
        <ImageButton
            android:id="@+id/iv_ib_bottom_mylottery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:src="@drawable/id_lottery_myself"/>
        
    </LinearLayout>
    
     <!-- 购彩的底部 -->
    
    <LinearLayout 
        android:id="@+id/iv_bottom_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_buttom_bg"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="visible">
        
        <ImageButton
            android:id="@+id/iv_ib_bottom_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btnselector"
            android:src="@drawable/id_clear_choose"/>
        
        <TextView 
            android:id="@+id/iv_tv_gamebottom_text"
            android:gravity="center"
            android:layout_width="match_parent" 
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="欢迎购买双色球"
            android:singleLine="true"/>
        
        <ImageButton
            android:id="@+id/iv_ib_bottom_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btnselector"
            android:src="@drawable/id_choose_ok"/>
        
    </LinearLayout>"
    

</RelativeLayout>
